<ul class="nav pull-right">
  <% if pro_signed_in? %>
    <li>
        <%= link_to 'Edit account', edit_pro_registration_path %>
    </li>
    <li>
        <%= link_to 'Logout', destroy_pro_session_path, :method=>'delete' %>
    </li>
  <% else %>
    <li class="dropdown">
      <a class="dropdown-toggle" href="#" data-toggle="dropdown">Organizations <strong class="caret"></strong></a>
      <div class="dropdown-menu" style="padding: 10px; padding-bottom: 0px;">

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div>
          <%= f.email_field :email, :value=>"Email",:width=>4 %></div>
        
          <div>
          <%= f.password_field :password, :value=>"Password" %></div>
        
          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>
        
          <div>
            <%= f.submit "Sign in", :class => "btn btn-primary", :style => "clear: left; width: 100%; height: 32px; font-size: 13px;" %>

<%= link_to raw('Register'), new_pro_registration_path, :class=>"btn", :style => "clear: left; width: 89%; height: 32px; font-size: 13px;" %>
          
          </div>

        <% end %>
      </div>
    </li>
  <% end %>
</ul>
